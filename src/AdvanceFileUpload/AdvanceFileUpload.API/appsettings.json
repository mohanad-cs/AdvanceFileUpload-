{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Microsoft.AspNetCore": "Warning"
        }

    },
    "ConnectionStrings": {
        "DefaultConnection": "Server=.;Database=AdvanceFileUpload;Trusted_Connection=True;MultipleActiveResultSets=true"
    },
    "UploadSetting": {
        "AllowedExtensions": ".jpg,.jpeg,.png,.pdf,.doc,.docx,.xls,.xlsx",
        "MaxFileSize": 104857600, // 100MB
        "MaxChunkSize": 2097152, // 2MB
        "SavingDirectory": "",
        "TempDirectory": ""

    },
    "AllowedHosts": "*"
}
